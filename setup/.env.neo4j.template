# Replication settings
API_REPLICAS=1
NEO4J_REPLICAS=1
REDIS_REPLICAS=1

# Docker Image Configuration
# This should match the image built and pushed from the main python-api-template repository
IMAGE_NAME=your-username/your-api-name
IMAGE_VERSION=0.0.1

# URLs and Domains
API_URL=api.example.com

# Database Configuration (Neo4j)
DB_TYPE=neo4j
DB_USER=neo4j

# Networks
TRAEFIK_NETWORK_NAME=traefik
BACKEND_NETWORK_NAME=api_backend

# Other settings
DATA_ROOT=/gluster_storage/swarm/python-api-template/api.example.com
STACK_NAME=api_production

# Python Version (should match the image)
PYTHON_VERSION=3.13

# API Settings
PORT=8000
DEBUG=false

# Redis Configuration
REDIS_URL=redis://redis:6379
